<p>
  <strong>Type:</strong>
  <%= @event.event_type %>
</p>

<p>
  <strong>Start:</strong>
  <%= @event.start_date %>
</p>

<p>
  <strong>End:</strong>
  <%= @event.end_date %>
</p>

<p>
  <strong>Employee:</strong>
  <%= @event.employee.name %>
</p>

<% if current_user?(@event.employee) %>
    <%= link_to "Update Event", edit_event_path(@event.id), class: "btn btn-warning btn-small" %>
<% end %>

<%= link_to 'Back', employee_path(@event.employee.id), class: "btn btn-link btn-small" %>
